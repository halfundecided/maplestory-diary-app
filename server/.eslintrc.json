{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ],
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-return-await": "off",
        "no-multi-assign": "off",
        "no-throw-literal": "off"
    }
}
